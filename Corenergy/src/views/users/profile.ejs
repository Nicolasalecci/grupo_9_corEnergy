<%-include("../includes/head")%>
<body>
    <%-include("../includes/header")%>
    <main>
        <section id="main_section">
            <h1><%= locals.user ? user.name : '' %>,<%= locals.user ? user.surname : '' %></h1>
            <h4><%= locals.user ? user.email : '' %></h4>
            <div class="add"><h4>Add shipping address</h4><h4>+</h4></div>
            <article>
                <form class="mainform1" action="" method="POST"> 
                    <label for="City">City<span>*</span></label>
                    <input required type="text" name="City" id="City" >
        
                    <label for="Address">Address<span>*</span></label>
                    <input required type="text" name="Address" id="Address" >
        
                    <label for="Floor">Floor<span>*</span></label>
                    <input required type="text" name="Floor" id="Floor" > 
                    
                    <label for="zipcode">Zip Code<span>*</span></label>
                    <input required type="number" name="zipcode" id="zipcode"  maxlength="4">
                    
                    <label for="telephone">Telephone</label>
                    <input  type="tel" name="telephone" id="telephone" >
                    <h6 >Required fields*</h6>

                    <button class="button" type="submit">Confirm</button>
                </form>
            </article>
            <div class="add"><h4>Add credit card</h4><h4>+</h4></div>
            <article>
                <form action="" method="POST">
                    <label for="creditcard">Credit Card<span>*</span></label>
                    <input required type="number" name="creditcard" id="creditcard"  maxlength="16">

                    <label for="expireMM">Experitation Date<span>*</span></label>
                        <select name='expireMM' id='expireMM'>
                        <option value='' disabled>Month</option>
                        <option value='01'>January</option>
                        <option value='02'>February</option>
                        <option value='03'>March</option>
                        <option value='04'>April</option>
                        <option value='05'>May</option>
                        <option value='06'>June</option>
                        <option value='07'>July</option>
                        <option value='08'>August</option>
                        <option value='09'>September</option>
                        <option value='10'>October</option>
                        <option value='11'>November</option>
                        <option value='12'>December</option>
                    </select> 
                    <select name='expireYY' id='expireYY'>
                        <option value='' disabled>Year</option>
                        <option value='21'>2021</option>
                        <option value='22'>2022</option>
                        <option value='23'>2023</option>
                        <option value='24'>2024</option>
                        <option value='25'>2025</option>
                        <option value='26'>2026</option>
                        <option value='27'>2027</option>
                        <option value='28'>2028</option>
                        <option value='29'>2029</option>
                        <option value='30'>2030</option>
                        <option value='31'>2031</option>
                    </select>

                        <label for="secode">Security Code<span>*</span></label>
                        <input required type="number" name="secode" id="secode" maxlength="4">

                        <p>Online payment methods</p>
                        <ul>
                            <li><figure><img class="visa" src="./images/visa.png" alt="visa"></figure></li>
                            <li><figure><img class="visa" src="./images/visa.png" alt="visa"></figure></li>
                            <li><figure><img class="visa" src="./images/visa.png" alt="visa"></figure></li>
                            <li><figure><img class="visa" src="./images/visa.png" alt="visa"></figure></li>
                        </ul>
                        <h6 >Required fields*</h6>
                        <button class="button" type="submit">Confirm</button>
                </form>
                <% if (locals.user && locals.user.category == "admin"){%>
                    <a href="/products/create"><button class="button" type="submit">Create Product</button></a>
                <%}%>
            </article>
        </section>
        <section id="profile_img">
        <figure>
            <img src="/images/uploads/users/<%= locals.user ? user.profileImage : '' %>" alt="Profile">
        </figure>
        </section>
    </main>
    <%-include("../includes/footer")%>
</body>
</html>