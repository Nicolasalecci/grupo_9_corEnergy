<%-include("../includes/head")%>
<body>
    <%-include("../includes/header")%>  
    <main>
        <section id="main_section">
            <h1>Log in</h1>
            <form action="/users/access" method="POST" id= "formLogIn"> 
                <label for="email">Username or E-mail<span>*</span></label>
                <input required type="email" name="email" id="email" value="<%= locals.old && old.email ? old.email : ""%>"> 
                <span id="errorsFrontUser" class="error"></span>
                <% if (locals.errors && errors.email) { %>
                    <p class="error">
                      <%= errors.email.msg %> 
                    </p>
                    <% } %>          
                
                <label for="password">Password<span>*</span></label>
                <input required type="password" name="password" id="password">
                <span id="errorsFrontPass" class="error"></span>
                <% if (locals.errors && errors.password) { %>
                    <p class="error">
                      <%= errors.password.msg %> 
                    </p>
                  <% } %>
                <h6 >Required fields*</h6>                
                <article>
                    <input type="checkbox" name="remember" id="remember">
                    <label for="remember">Remember me</label>
                </article>
                <button class="button" type="submit">Log in</button>
            </form>
            <a href="#"><h5>Forgot password</h5></a>
            
        </section>
        <section id="benefits">
            <h1>Multiple Benefits</h1>
            <p>New customer?</p>
            <ul>
                <li>From health to financial well-being.</li>
                <li>Free shipping, returns and exchanges on all orders.</li>
                <li>$10 off a purchase on your birthday</li>
                <li>Exclusive offers & rewards</li>
            </ul>
            <a href="/users/sign-up"><button>Sing Up</button></a>
        </section>
    </main>
    <%-include("../includes/footer")%>
    <script src="/js/validationLogIn.js"></script>
</body>
</html>