<header>
    <div id="header_content">
        <section>
            <figure id="full">
                <a href="/"><img src="/images/default_and_logos/Logo.svg" alt="Corenergy"></a>
            </figure>
            <figure id="half">
                <a href="/"> <img src="/images/default_and_logos/c_logo.svg" alt="Corenergy"></a>
            </figure>
            <form action="/search" method="GET">
                <input type="text" name="keywords" placeholder="  Search your products...">
                <button type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            <nav id="icons">
                <ul>
                    <% if (locals.user){%>
                    <li id="cart">
                        <a href="/products/cart">
                            <i class="fas fa-shopping-cart"></i>
                        </a>
                    </li>
                    <li>
                        <div class="vl"></div>
                    </li>
                    <%}%>
                    <li class="log_in">
                        <a href="/users/log-in">
                            <i class="fas fa-user-circle"></i>
                        </a>
                    </li>
                    <li class="log_in">
                        <% if (locals.user){%>
                            <a href="/users/profile">
                                <p><%=locals.user.name%></p>
                            </a>
                        <%}else{%>
                            <a href="/users/log-in">
                                <p>Log in</p>
                            </a>
                        <%}%>
                    </li>
                    <li>
                        <i class="fas fa-bars"></i>
                    </li>
                    <% if (locals.user){%>
                        <li class="log_in">
                            <a href="/users/log-out"><i class="fas fa-sign-out-alt"></i></a>
                        </li>
                        
                    <%}%>
                </ul>
            </nav>
        </section>
        <nav id="nav_products">
            <ul id ="log_in_mobile">
                    <li>
                        <% if (locals.user){%>
                            <a href="/users/profile">
                                <p><%=locals.user.name%></p>
                            </a>
                        <%}else{%>
                            <a href="/users/log-in">
                                <p>Log in</p>
                            </a>
                        <%}%>
                    </li>
                <% if (locals.user){%>
                        <li id="mobile_cart">
                            <a href="/products/cart">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                        </li>

                    <li>
                        <a href="/users/log-out"><i class="fas fa-sign-out-alt"></i></a>
                    </li>
                <%}%>
            </ul> 
            <ul>
                <li><a href="/products/category/weights">Weights</a></li>
                <li><a href="/products/category/elastic-bands">Elastic Bands</a></li>
                <li><a href="/products/category/mats">Mats</a></li>
                <li><a href="/products/category/bars">Bars</a></li>
            </ul>                            
        </nav>
    </div>
    <script src="/js/burguerMenu.js"></script>
</header>
