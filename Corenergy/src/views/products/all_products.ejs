<body>
<%-include("../includes/header")%>
    <main>
        <section>
            <figure>
                <% if (title.includes("Weights")){%>
                    <img src="/images/default_and_logos/weights_banner.jpg" id="banner">
                <%} else if (title.includes("Elastic")){%>
                    <img src="/images/default_and_logos/elastic_bands_banner.jpg" id="banner">
                <%} else if (title.includes("Mats")){%>
                    <img src="/images/default_and_logos/mats_banner.jpg" id="banner">
                <%} else {%>
                    <img src="/images/default_and_logos/bars_banner.jpg" id="banner">
                <%}%>
            </figure> 
        </section>
        <h3 id="best_seller"><%= title%></h3>
        <section name="sort_by" id="sort_by">
            <p>Sort by </p>
            <select>
                <option value="mostre">Featured</option>
                <option value="low_to_high">Price:Low to High</option>
                <option value="high_to_low">Price:High_to_low</option>
            </select>
        </section>
        <section id="filters">
            <% if(listOfSubCategories){%>
                <article>
                    <h5>Categories</h5>
                    <ul>
                        <% for (let i=0 ; i<listOfSubCategories.length ; i++){%>
                            <li>
                                <a href="#"><%= listOfSubCategories[i]%></a>
                            </li>
                        <%}%>
                    </ul>
                </article>
            <%}%>            
            <br>
            <article>
                <h5>Price</h5>
                <ul>
                    <li>
                        <a href="#">Under 30</a>
                    </li>
                    <li>
                        <a href="#">30 to 60</a>
                    </li>
                    <li>
                        <a href="#">60 and Above</a>
                    </li>
                </ul>
            </article>
        </section>
        <%-include("../includes/list_of_articles")%>
    </main>    
    <%-include("../includes/footer")%>
</body>
</html>