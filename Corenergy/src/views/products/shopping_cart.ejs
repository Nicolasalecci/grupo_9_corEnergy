<%-include("../includes/head")%>
<body>
    <%-include("../includes/header")%>
    <main>
            <h1>Your Cart</h1>
            <form action="/products/order-successful?_method=PUT" method="POST" id="total-price" enctype="multipart/form-data">
            <table>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
                <% for ( let i = 0 ; i < ProductsBought ; i ++){%>
                    <tr>
                        <td>
                            <section class="cart-info">
                                <figure>
                                    <img src="./images/test.jpg">
                                </figure>
                                <div>
                                    <h3><%= ProductsBought[i].name%></h3>
                                    <p><%= ProductsBought[i].description%></p>
                                    <a href="">Delete</a>
                                </div>
                            </section>
                        </td>
                        <td>
                            <div class="counter">
                                <i class="fas fa-angle-down"></i>
                                <input type="number"  name="quantity" value="1">
                                <i class="fas fa-angle-up"></i> 
                            </div> 
                        </td>
                        <td class="item-price"><%= ProductsBought[i].price%></td>
                    </tr>
                    <tr>
                    <!-- <input hidden type="number" name="idProduct" id="idProduct" value="<%= idProduct%>"> -->
                <%}%>
            </table>
                <select  name="selectedAddress" id="selectedAddress">
                    <option selected value="defualt">Address</option>
                    <% for (let i = 0 ; i< registeredAddress; i ++){%>
                        <option value="<%= registeredAddress[i].id%>"><%= registeredAddress[i].address%></option>  
                    <%}%>
                </select>               
                <!-- COMO MANDO LA DATA DEL TOTAL COMO NUMERO!!-->
                <ul>
                    <li>Total Price</li>
                    <li class="li-price">$3000.00</li>
                </ul>
                
                <select name="selectedCard" id="selectedCard">
                    <option selected value="default">Credit Card</option>
                    <% for (let i = 0 ; i< registeredCreditCards; i ++){%>
                        <option value="<%= registeredCreditCards[i].id%>"><%= registeredCreditCards[i].creditcard%></option>  
                    <%}%>               
                </select>
                               
                <button type="submit">Checkout</button>
                
            </form>
    </main>
<%-include("../includes/footer")%>      
</body>
</html>